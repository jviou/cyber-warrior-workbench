datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ActionItem {
  id        String   @id @default(cuid())
  title     String
  description String?
  owner     String?
  priority  String?   // low|med|high
  status    String    @default("todo") // todo|doing|done
  dueAt     DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  journal   JournalEvent[]
}

model Decision {
  id         String   @id @default(cuid())
  question   String
  option     String
  rationale  String?
  validator  String?
  decidedAt  DateTime  @default(now())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model JournalEvent {
  id        String   @id @default(cuid())
  kind      String   // action|decision|comm|inject|note
  at        DateTime @default(now())
  summary   String
  details   String?
  actionId  String?
  action    ActionItem? @relation(fields: [actionId], references: [id])
  createdAt DateTime  @default(now())
}

model Comm {
  id        String   @id @default(cuid())
  audience  String
  subject   String
  message   String
  author    String?
  approvedBy String?
  sentAt    DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model AuditLog {
  id     String   @id @default(cuid())
  ts     DateTime @default(now())
  actor  String?
  ip     String?
  entity String   // e.g. 'ActionItem'
  op     String   // create|update|delete
  before Json?
  after  Json?
}
